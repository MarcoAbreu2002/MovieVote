@{
    ViewData["Title"] = "Thank You!";
}

<style>
    body {
        background: url('/images/home.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .thank-you-container {
        max-width: 600px;
        margin: 100px auto;
        background-color: white;
        padding: 40px;
        border-radius: 12px;
