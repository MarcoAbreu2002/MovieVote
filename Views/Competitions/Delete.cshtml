@model CineVote.Models.Competition

@{
    ViewData["Title"] = "Delete Competition";
}

<style>
    body {
        background: url('/images/home.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .delete-container {
        max-width: 600px;
        margin: 40px auto;
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }
</style>

<div class="delete-container">
    <h2>Are you sure you want to delete this competition?</h2>

    <dl class="row">
        <dt class="col-sm-4">Title</dt>
        <dd class="col-sm-8">@Model.Title</dd>

        <dt class="col-sm-4">Category</dt>
        <dd class="col-sm-8">@Model.Category</dd>

        <dt class="col-sm-4">Start</dt>
        <dd class="col-sm-8">@Model.StartTime</dd>

        <dt class="col-sm-4">End</dt>
        <dd class="col-sm-8">@Model.EndTime</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
